{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"ignore": ["build", "dist", "drizzle", "coverage", "node_modules"],
		"formatWithErrors": false,
		"lineWidth": 120
	},
	"javascript": {
		"linter": {
			"enabled": true
		},
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"linter": {
		"ignore": ["build", "dist", "drizzle", "coverage", "node_modules"],
		"enabled": true,
		"rules": {
			"style": {
				"useImportType": "off",
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	}
}
